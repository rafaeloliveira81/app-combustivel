<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_label_alcool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/txt_label_alcool"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_alcool"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:hint="Valor do Ã¡lcool em reais"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txt_label_gasolina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_label_gasolina"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_gasolina"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:ems="10"
            android:hint="Valor da gasolina em reais"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="80dp"
            android:backgroundTint="#1A237E"
            android:text="Calcular" />

        <TextView
            android:id="@+id/txt_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textSize="34sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>